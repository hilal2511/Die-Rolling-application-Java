import java.util.Random;
public class Die {
    private int value;
    private int sides;
    public Die(){
        sides=6;
    }
    public Die(int nSides){
        sides= nSides;
    }
    public void Roll(){
        Random rand = new Random();
        value = rand.nextInt(sides+1);
    }
    public int getValue() {
        return value;
    }

}
